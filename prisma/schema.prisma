generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  coordinator
  agent
  viewer
}

enum DealStatus {
  lead
  active
  closing
  closed
}

enum MilestoneStatus {
  todo
  in_progress
  done
  blocked
}

enum TaskStatus {
  todo
  in_progress
  done
}

enum Priority {
  low
  medium
  high
}

enum LlmFeature {
  deal_summary
  message_drafting
  readiness_explanation
  risk_delay_predictor
  document_qa
  negotiation_prep
  auto_followup
  meeting_notes_tasks
  deal_rescue
}

enum LlmSuggestionStatus {
  pending_review
  approved
  rejected
  sent
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]
  deals Deal[]
  llmRequests LlmRequest[]
  llmConfigs LlmConfig[]
  llmAuditLogs LlmAuditLog[]
}

model User {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  email          String   @unique
  passwordHash   String
  role           Role
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  dealsOwned   Deal[]       @relation("DealOwner")
  tasks        Task[]
  communications Communication[]
  events Event[]
  automationRuns AutomationRun[]
  llmRequests LlmRequest[]
  llmSuggestionsApproved LlmSuggestion[] @relation("SuggestionApprover")
  llmAuditLogs LlmAuditLog[]
}

model Deal {
  id             String     @id @default(cuid())
  organizationId String
  ownerId        String?
  title          String
  status         DealStatus @default(active)
  targetCloseAt  DateTime?
  value          Float?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  organization Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  owner        User?          @relation("DealOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  parties      Party[]
  milestones   Milestone[]
  tasks        Task[]
  documents    Document[]
  communications Communication[]
  events       Event[]
  automationRuns AutomationRun[]
  llmRequests LlmRequest[]
  llmSuggestions LlmSuggestion[]
  docChunks DocChunk[]
  llmAuditLogs LlmAuditLog[]
}

model Party {
  id        String   @id @default(cuid())
  dealId    String
  name      String
  type      String
  email     String?
  phone     String?
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}

model Milestone {
  id          String          @id @default(cuid())
  dealId       String
  name        String
  dueAt       DateTime?
  status      MilestoneStatus @default(todo)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
}

model Task {
  id          String      @id @default(cuid())
  dealId       String
  assigneeId   String?
  title       String
  dueAt       DateTime?
  status      TaskStatus  @default(todo)
  priority    Priority    @default(medium)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  deal     Deal  @relation(fields: [dealId], references: [id], onDelete: Cascade)
  assignee User? @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
}

model Document {
  id         String   @id @default(cuid())
  dealId      String
  name       String
  required   Boolean  @default(true)
  uploaded   Boolean  @default(false)
  uploadedAt DateTime?
  textContent String?
  metadata   Json?
  createdAt  DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
  chunks DocChunk[]
}

model Communication {
  id        String   @id @default(cuid())
  dealId     String
  userId    String?
  channel   String
  summary   String
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Event {
  id        String   @id @default(cuid())
  dealId     String
  userId    String?
  type      String
  payload   Json
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model AutomationRun {
  id         String   @id @default(cuid())
  dealId      String?
  userId     String?
  kind       String
  dedupeKey  String?
  result     Json
  createdAt  DateTime @default(now())

  deal Deal? @relation(fields: [dealId], references: [id], onDelete: SetNull)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([kind, dedupeKey])
}

model LlmRequest {
  id             String    @id @default(cuid())
  organizationId String
  dealId         String?
  userId         String?
  feature        LlmFeature
  model          String
  prompt         String
  responseText   String?
  responseJson   Json?
  confidence     Float?
  citations      Json?
  inputTokens    Int?
  outputTokens   Int?
  estimatedCost  Float?
  status         String    @default("ok")
  createdAt      DateTime  @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  deal Deal? @relation(fields: [dealId], references: [id], onDelete: SetNull)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  suggestions LlmSuggestion[]
}

model LlmSuggestion {
  id             String              @id @default(cuid())
  requestId      String
  dealId         String
  type           String
  title          String?
  content        String
  payload        Json?
  status         LlmSuggestionStatus @default(pending_review)
  approvedById   String?
  approvedAt     DateTime?
  sentAt         DateTime?
  createdAt      DateTime            @default(now())

  request LlmRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  deal    Deal       @relation(fields: [dealId], references: [id], onDelete: Cascade)
  approvedBy User?   @relation("SuggestionApprover", fields: [approvedById], references: [id], onDelete: SetNull)
}

model DocChunk {
  id          String   @id @default(cuid())
  dealId      String
  documentId  String?
  sourceName  String
  chunkIndex  Int
  content     String
  keywords    String[]
  embedding   Json?
  meta        Json?
  createdAt   DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)
  document Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)

  @@index([dealId])
  @@index([sourceName])
}

model LlmConfig {
  id                  String   @id @default(cuid())
  organizationId      String
  autoFollowupEnabled Boolean  @default(false)
  approvalRequired    Boolean  @default(true)
  whitelistedTemplates String[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId])
}

model LlmAuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String?
  dealId         String?
  action         String
  payload        Json?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  deal Deal? @relation(fields: [dealId], references: [id], onDelete: SetNull)
}
